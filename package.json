{
  "name": "daily-standup-bot",
  "displayName": "Daily Standup Bot",
  "publisher": "vigneshwaranravi",
  "repository": {
    "type": "git",
    "url": "https://github.com/vigneshwaran-ravi/daily-standup-bot"
  },
  "description": "AI-powered daily standup reports from Git commits",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "daily-standup-bot.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "daily-standup-bot.configureOpenAI",
        "title": "Configure OpenAI API Key",
        "category": "Daily Standup Bot"
      },
      {
        "command": "daily-standup-bot.configureGemini",
        "title": "Configure Gemini API Key",
        "category": "Daily Standup Bot"
      },
      {
        "command": "daily-standup-bot.switchProvider",
        "title": "Switch AI Provider",
        "category": "Daily Standup Bot"
      },
      {
        "command": "daily-standup-bot.generateStandup",
        "title": "Generate Daily Standup",
        "category": "Daily Standup Bot"
      },
      {
        "command": "daily-standup-bot.configureSlack",
        "title": "Configure Slack Integration",
        "category": "Daily Standup Bot"
      },
      {
        "command": "daily-standup-bot.testSlack",
        "title": "Test Slack Connection",
        "category": "Daily Standup Bot"
      }
    ],
    "configuration": {
      "title": "Daily Standup Bot",
      "properties": {
        "daily-standup-bot.provider": {
          "type": "string",
          "enum": [
            "openai",
            "gemini"
          ],
          "default": "gemini",
          "description": "AI provider to use for generating commit summaries"
        },
        "daily-standup-bot.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key (stored securely)"
        },
        "daily-standup-bot.openai.model": {
          "type": "string",
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4",
            "gpt-4-turbo",
            "gpt-4o"
          ],
          "default": "gpt-3.5-turbo",
          "description": "OpenAI model to use"
        },
        "daily-standup-bot.gemini.apiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API Key (stored securely)"
        },
        "daily-standup-bot.gemini.model": {
          "type": "string",
          "enum": [
            "gemini-pro",
            "gemini-2.0-flash",
            "gemini-1.5-pro"
          ],
          "default": "gemini-2.0-flash",
          "description": "Gemini model to use"
        },
        "daily-standup-bot.slack.webhookUrl": {
          "type": "string",
          "default": "",
          "description": "Slack webhook URL for sending messages"
        },
        "daily-standup-bot.slack.botToken": {
          "type": "string",
          "default": "",
          "description": "Slack bot token (stored securely)"
        },
        "daily-standup-bot.slack.defaultChannel": {
          "type": "string",
          "default": "#general",
          "description": "Default Slack channel to send messages to"
        },
        "daily-standup-bot.slack.botUsername": {
          "type": "string",
          "default": "AI Commit Bot",
          "description": "Display name for the bot in Slack"
        },
        "daily-standup-bot.slack.botIcon": {
          "type": "string",
          "default": ":robot_face:",
          "description": "Emoji icon for the bot in Slack"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
